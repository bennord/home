# home bins
export PATH="$PATH:$HOME/bin"

#java
export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64

# android
export ANDROID_SDK_ROOT=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_SDK_ROOT/tools/bin
export PATH=$PATH:$ANDROID_SDK_ROOT/platform-tools
export PATH=$PATH:$ANDROID_SDK_ROOT/emulator
export PATH=$PATH:$ANDROID_SDK_ROOT/build-tools

# shortcuts
alias e="code"
alias astudio="$HOME/android-studio//bin/studio.sh"

# IronMQ alias
export QUEUE_PREFIX=bennord

# git aliases
alias git-find-repos="find . -maxdepth 4 -name .git -type d | rev | cut -c 6- | rev"
alias git-find-pull="git-find-repos | xargs -t -I {} git -C {} pull"

# vagrant
alias vaginfo="vagrant ssh -c 'tailf /var/log/gengo/kubelet/kubelet.INFO'"

# z
if [ -f ~/z.sh ]; then
    . ~/z.sh
fi

# load nvm command script (node.js version manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# poetry
export PATH="$PATH:$HOME/.poetry/bin"

# xrandr (configure displays/monitors)
alias xrc="xrandr | grep -E 'connected|\*|3840'"
alias xr1p="xrandr --output DP-1 --mode 3840x2160 --rate 60.00 --primary"
alias xr1s="xrandr --output DP-2 --mode 3840x2160 --rate 60.00 --right-of DP-1"
alias xr1e="xrandr --output eDP-1 --auto --below DP-1"

alias xr2p="xrandr --output DP-2 --mode 3840x2160 --rate 60.00 --primary"
alias xr2s="xrandr --output DP-1 --mode 3840x2160 --rate 60.00 --right-of DP-2"
alias xr2e="xrandr --output eDP-1 --auto --below DP-2"

alias xr1="
    xr1p
    sleep 5
    xr1s
    sleep 5
    xr1e
    sleep 1
    xrc"
alias xr2="
    xr2p
    sleep 5
    xr2s
    sleep 5
    xr2e
    sleep 1
    xrc"

# github repo browser
function gh() {
    firefox "https://github.com/$1"
}

functon ghg() {
    gh "gengo/$1"
}
alias ghai="ghg ai-dev-tools"

# restore window positions (requires wmctrl)
alias ws="lwsm save"
alias wr="lwsm restore"